{
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": ".",
    "preserveConstEnums": true,
    "removeComments": true,
    "allowJs": true,
    "alwaysStrict": true,
    "allowUnusedLabels": false,
    "strictNullChecks": false
  },
  "include": [
    "./**/*.*"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}